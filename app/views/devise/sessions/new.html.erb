<div class="max-w-md mx-auto mt-16">
  <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
    <div class="text-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">Welcome back</h1>
      <p class="text-sm text-gray-500">Log in to continue to <span class="font-semibold">Common Cosmetics</span></p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <div class="relative">
          <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
            <!-- mail icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 7l9 6 9-6m-18 10h18V7H3v10z"/>
            </svg>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full rounded-lg border border-gray-300 pl-9 pr-3 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500/40 focus:border-rose-500" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between mb-1">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <% if devise_mapping.recoverable? %>
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-rose-600 hover:underline" %>
          <% end %>
        </div>
        <div class="relative">
          <span class="pointer-events-none absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
            <!-- lock icon -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 1a5 5 0 00-5 5v3H6a3 3 0 00-3 3v7a3 3 0 003 3h12a3 3 0 003-3v-7a3 3 0 00-3-3h-1V6a5 5 0 00-5-5zm-3 8V6a3 3 0 116 0v3H9z"/>
            </svg>
          </span>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full rounded-lg border border-gray-300 pl-9 pr-3 py-2 focus:outline-none focus:ring-2 focus:ring-rose-500/40 focus:border-rose-500" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <label class="inline-flex items-center text-sm">
          <%= f.check_box :remember_me, class: "mr-2 rounded" %>
          <span class="text-gray-700">Remember me</span>
        </label>
      <% end %>

      <%= f.submit "Log in", class: "w-full !bg-red-600 !hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
    <% end %>

    <div class="my-6 flex items-center gap-4">
      <div class="h-px bg-gray-200 flex-1"></div>
      <div class="text-xs uppercase tracking-wide text-gray-400">or</div>
      <div class="h-px bg-gray-200 flex-1"></div>
    </div>

    <div class="text-center text-sm text-gray-700">
      New here?
      <%= link_to "Create an account", new_registration_path(resource_name), class: "text-rose-600 font-medium hover:underline" %>
    </div>
  </div>

  <div class="text-center text-xs text-gray-500 mt-4">
    By logging in, you agree to our Terms and Privacy Policy.
  </div>
</div>
