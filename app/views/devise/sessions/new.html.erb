<div class="max-w-md mx-auto mt-12 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-center text-red-600">Log in to Common Cosmetics</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <label class="inline-flex items-center">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <span>Remember me</span>
        </label>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= render "devise/shared/links" %>
  </div>
</div>
