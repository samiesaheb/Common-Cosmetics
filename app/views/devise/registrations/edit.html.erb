<div class="max-w-2xl mx-auto mt-12 p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-2xl font-bold mb-6 text-red-600 text-center">Edit Your Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :avatar, "Profile Picture", class: "block font-semibold mb-1" %>
      <%= f.file_field :avatar, class: "w-full" %>
      <% if resource.avatar.attached? %>
        <div class="mt-4 flex justify-center">
          <%= image_tag resource.avatar.variant(resize_to_limit: [128, 128]), class: "rounded-full border border-gray-300 shadow-md w-32 h-32 object-cover" %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :username, class: "block font-semibold mb-1" %>
      <%= f.text_field :username, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :first_name, class: "block font-semibold mb-1" %>
      <%= f.text_field :first_name, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :last_name, class: "block font-semibold mb-1" %>
      <%= f.text_field :last_name, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :bio, class: "block font-semibold mb-1" %>
      <%= f.text_area :bio, rows: 4, class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "block font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="mb-4 text-sm text-yellow-700 bg-yellow-100 rounded p-2">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.label :password, class: "block font-semibold mb-1" %> 
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500 mt-1"><%= @minimum_password_length %> characters minimum</p>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block font-semibold mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div class="mb-4">
      <%= f.label :current_password, "Current password (required to update)", class: "block font-semibold mb-1" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full border border-gray-300 rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.submit "Update", class: "w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <div class="mt-6 border-t pt-4">
    <h3 class="text-lg font-semibold mb-2">Cancel my account</h3>
    <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure you want to cancel your account?" }, class: "bg-red-100 hover:bg-red-200 text-red-800 font-semibold py-2 px-4 rounded" %>
  </div>

  <div class="mt-4">
    <%= link_to "Back", root_path, class: "text-sm text-gray-600 hover:underline" %>
  </div>
</div>
