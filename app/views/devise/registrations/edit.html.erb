<div class="max-w-3xl mx-auto mt-12">
  <!-- Header -->
  <div class="mb-6 text-center">
    <h2 class="text-2xl font-bold text-gray-900">Edit Profile</h2>
    <p class="text-sm text-gray-500">Update your profile details. Leave password fields blank to keep your current password.</p>
  </div>

  <%= form_for(resource,
               as: resource_name,
               url: registration_path(resource_name),
               html: { method: :put, multipart: true, class: "space-y-8" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Profile Card -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-5">Profile</h3>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Avatar -->
        <div class="flex flex-col items-center gap-4">
          <div class="relative">
            <% if resource.avatar.attached? %>
              <%= image_tag resource.avatar.variant(resize_to_limit: [160, 160]),
                            class: "h-40 w-40 rounded-full object-cover border border-gray-200 shadow-sm",
                            id: "avatar-preview" %>
            <% else %>
              <img src="https://placehold.co/160x160?text=Avatar"
                   alt="Avatar preview"
                   class="h-40 w-40 rounded-full object-cover border border-gray-200 shadow-sm"
                   id="avatar-preview">
            <% end %>
          </div>

          <div class="w-full">
            <%= f.label :avatar, "Profile picture", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.file_field :avatar,
                  accept: "image/*",
                  class: "block w-full text-sm text-gray-700 file:mr-3 file:py-2 file:px-3 file:rounded-lg file:border-0 file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200",
                  data: { action: "change->avatar-preview#update" } %>
          </div>
        </div>

        <!-- Names & Username -->
        <div class="md:col-span-2 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :first_name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
          </div>

          <div>
            <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :last_name, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_field :username, class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
            <p class="mt-1 text-xs text-gray-500">Your unique handle (e.g. <span class="font-mono">@yourname</span>).</p>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.text_area :bio, rows: 4, maxlength: 200,
                  class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500",
                  data: { controller: "char-count", action: "input->char-count#update", "char-count-max-value": 200 } %>
            <div class="mt-1 text-xs text-gray-500">
              <span data-char-count-target="counter">0</span>/200
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Account & Security Card -->
    <div class="bg-white rounded-2xl border border-gray-200 shadow-sm p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-5">Account & Security</h3>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <div class="sm:col-span-2">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autocomplete: "email",
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p class="mt-2 text-xs text-yellow-800 bg-yellow-50 border border-yellow-200 rounded px-2 py-1">
              Waiting confirmation for: <%= resource.unconfirmed_email %>
            </p>
          <% end %>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password, autocomplete: "new-password",
                placeholder: "Leave blank to keep current",
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
        </div>

        <div class="sm:col-span-2">
          <%= f.label :current_password, "Current password (required to update)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :current_password, autocomplete: "current-password",
                class: "w-full rounded-lg border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-red-500/40 focus:border-red-500" %>
          <p class="mt-1 text-xs text-gray-500">Enter your current password to save changes.</p>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row gap-3">
      <%= f.submit "Save changes", class: "inline-flex items-center justify-center rounded-lg bg-red-600 text-white font-semibold px-4 py-2 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500/40" %>
      <%= link_to "Back", root_path, class: "inline-flex items-center justify-center rounded-lg border border-gray-300 text-gray-700 px-4 py-2 hover:bg-gray-50" %>
    </div>
  <% end %>

  <!-- Danger zone -->
  <div class="mt-8 bg-white rounded-2xl border border-red-200 p-6">
    <h3 class="text-lg font-semibold text-red-700 mb-3">Danger Zone</h3>
    <p class="text-sm text-gray-600 mb-4">Deleting your account is permanent and cannot be undone.</p>
    <%= button_to "Delete my account",
          registration_path(resource_name),
          method: :delete,
          data: { confirm: "Are you sure you want to delete your account? This cannot be undone." },
          class: "rounded-lg bg-red-50 text-red-700 px-4 py-2 hover:bg-red-100 font-semibold" %>
  </div>
</div>
