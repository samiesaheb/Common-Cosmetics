<% content_for :title, "Edit Post" %>

<div class="max-w-2xl mx-auto mt-10 bg-white p-6 rounded-2xl shadow-sm border border-gray-100">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Edit Post</h1>

  <%= render "form", post: @post %>

  <div class="mt-6 flex items-center justify-between text-sm">
    <%= link_to "← Back", posts_path,
          class: "text-gray-600 hover:text-red-600 font-medium" %>
    <%= link_to "View Post", @post,
          class: "text-red-600 hover:underline font-medium" %>
  </div>
</div>
