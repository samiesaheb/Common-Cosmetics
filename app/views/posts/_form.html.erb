<%= form_with(model: post, local: true, html: { multipart: true }) do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
      <h2 class="font-semibold"><%= pluralize(post.errors.count, "error") %> prevented this post from being saved:</h2>
      <ul class="list-disc ml-5 mt-2 text-sm">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :content, class: "block font-semibold mb-1" %>
    <%= form.text_area :content, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :image, class: "block font-semibold mb-1" %>
    <%= form.file_field :image, class: "w-full text-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :rating, "Rating (optional)", class: "block font-semibold mb-1" %>
    <%= form.select :rating,
          options_for_select([["â€”", nil]] + (1..5).map { |n| [n, n] }, selected: post.rating),
          {}, class: "w-full border border-gray-300 rounded px-3 py-2 bg-white" %>
  </div>

  <div class="text-right">
    <%= form.submit "Post", class: "bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded" %>
  </div>
<% end %>
