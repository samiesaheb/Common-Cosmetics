<article
  class="bg-white border border-gray-100 rounded-2xl shadow-sm p-5 hover:shadow-md transition cursor-pointer"
  data-controller="card-nav"
  data-card-nav-url-value="<%= post_path(post) %>"
  data-action="click->card-nav#go keydown->card-nav#key"
  tabindex="0"
  role="link"
>
  <!-- Header: avatar, username, timestamp, kebab -->
  <header class="flex items-start gap-3 mb-4">
    <% if post.user.avatar.attached? %>
      <%= image_tag post.user.avatar.variant(resize_to_fill: [44, 44]),
                    class: "rounded-full h-11 w-11 object-cover border border-gray-200" %>
    <% else %>
      <div class="h-11 w-11 rounded-full bg-gray-300 flex items-center justify-center text-white text-base font-semibold">
        <%= post.user.username[0].upcase %>
      </div>
    <% end %>

    <div class="min-w-0 flex-1">
      <div class="flex items-center gap-2">
        <%= link_to "@#{post.user.username}",
                    username_profile_path(username: post.user.username),
                    class: "font-semibold text-gray-900 hover:underline truncate" %>
        <span class="text-gray-400">•</span>
        <time class="text-xs text-gray-500" title="<%= post.created_at.strftime("%B %d, %Y %H:%M") %>">
          <%= distance_of_time_in_words_to_now(post.created_at) %> ago
        </time>
      </div>
    </div>

    <% if post.user == current_user %>
      <div class="relative" x-data="{ open: false }" data-no-nav>
        <button @click="open = !open"
                class="p-1 rounded-full hover:bg-gray-100 text-gray-500 focus:outline-none focus:ring-2 focus:ring-red-500">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zm6 0a2 2 0 11-4 0 2 2 0 014 0zm6 0a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="sr-only">Post options</span>
        </button>

        <div x-show="open" x-cloak @click.away="open = false" x-transition
             class="absolute right-0 mt-2 w-32 bg-white border border-gray-200 rounded-md shadow-lg z-20">
          <%= link_to "Edit", edit_post_path(post),
                      class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= button_to "Delete", post_path(post),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this post?" },
                        class: "w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50" %>
        </div>
      </div>
    <% end %>
  </header>

  <% if post.content.present? %>
    <div class="mb-3 text-[15px] leading-6 text-gray-900 whitespace-pre-line">
      <%= simple_format(post.content) %>
    </div>
  <% end %>

  <% if post.image.attached? %>
    <div class="mb-3 rounded-xl overflow-hidden border border-gray-100" data-no-nav>
      <%= image_tag post.image.variant(resize_to_limit: [1200, 1200]),
                    class: "w-full h-auto object-cover" %>
    </div>
  <% end %>

  <% if post.rating.present? %>
    <div class="mt-1 mb-2 flex items-center gap-1" aria-label="Rating <%= post.rating %> out of 5">
      <% 1.upto(5) do |i| %>
        <span class="<%= i <= post.rating ? 'text-yellow-500' : 'text-gray-300' %> text-base">★</span>
      <% end %>
      <span class="ml-1 text-xs text-gray-500">(<%= post.rating %>/5)</span>
    </div>
  <% end %>

  <% if post.products.any? %>
    <div class="mb-2 text-sm text-gray-700">
      <span class="font-semibold text-gray-900">Products:</span>
      <% post.products.each do |product| %>
        <%= link_to "#{product.name} (#{product.brand})", product_path(product),
                    class: "text-red-600 hover:underline mr-2" %>
      <% end %>
    </div>
  <% end %>

  <div class="mt-2 flex items-center justify-between" data-no-nav>
    <div>
      <%= turbo_frame_tag dom_id(post, :like_button) do %>
        <%= render "likes/like_button", likeable: post %>
      <% end %>
    </div>
    <div class="text-sm text-gray-500">
      <%= pluralize(post.comments.size, "comment") %>
    </div>
  </div>

  <div class="mt-3" data-no-nav>
    <%= turbo_frame_tag "new_comment_post_#{post.id}" do %>
      <%= render 'comments/form', post: post %>
    <% end %>
  </div>

  <div id="comments" class="mt-2" data-no-nav>
    <%= turbo_frame_tag "comments_for_post_#{post.id}" do %>
      <%= render post.comments.top_level %>
    <% end %>
  </div>
</article>
